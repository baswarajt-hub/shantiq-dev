{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",

    // Important basic options:
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Fix for "implicit any" errors:
    "noImplicitAny": false
  },
  "include": ["src"]
}
